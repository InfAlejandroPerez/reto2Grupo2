package operacionesBD;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;

import modelo.Provincia;

public class operaciones {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Provincia pVizcaya=new Provincia();
		
		pVizcaya.setCodProvincia(48);
		pVizcaya.setNombre("Bizkaia");
		
		Provincia pGuipuzcoa=new Provincia();
		
		pGuipuzcoa.setCodProvincia(20);
		pGuipuzcoa.setNombre("Gipuzkoa");
		
		Provincia pAlava= new Provincia();
		
		pAlava.setCodProvincia(01);
		pAlava.setNombre("Araba");
		
		Transaction tx;
		
		SessionFactory sesion = HibernateUtil.getSessionFactory();
		
		Session s = sesion.openSession();
		
		tx = s.beginTransaction();
		
		s.save(pVizcaya);
		s.save(pGuipuzcoa);
		s.save(pAlava);
		tx.commit();
		
		
		
		
		
	}

}
